<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_ot">

            <ScrollView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/footer_text">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/textName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 1:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 1"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/title_background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background">

                        <TextView
                            android:id="@+id/textName2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 2:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 2"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/title_background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background">

                        <TextView
                            android:id="@+id/textName3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 3:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 3"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/title_background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background">

                        <TextView
                            android:id="@+id/textName4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 4:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 4"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/title_background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background">

                        <TextView
                            android:id="@+id/textName5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 5:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 5"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/title_background"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/title_background"
                        android:paddingBottom="4dp">

                        <TextView
                            android:id="@+id/textName6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:layout_weight="0.45"
                            android:gravity="left|center_vertical"
                            android:text="Name 6:"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/textValue6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.55"
                            android:gravity="left|center_vertical"
                            android:text="Value 6"
                            android:textSize="18sp"
                            android:textColor="@color/text"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"></View>

                    <se.anyro.nfc_reader.view.ProgressWheel
                        android:id="@+id/progress_bar"
                        style="@style/ProgressBarStyle.Main"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <se.anyro.nfc_reader.view.StretchingImageView
                        android:padding="18dp"
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"></View>


                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/footer_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">


                <se.anyro.nfc_reader.font.RobotoTextView
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:text="@string/footer_message_first_word"
                    style="@style/TextViewAppearance.Caption2"
                    android:textSize="12sp" />

                <se.anyro.nfc_reader.font.RobotoTextView
                    android:padding="1dp"
                    android:layout_gravity="center"
                    android:text="@string/footer_message_second_word"
                    style="@style/TextViewAppearance.Caption3"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <include
            layout="@layout/list_view"
            android:layout_width="@dimen/drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
