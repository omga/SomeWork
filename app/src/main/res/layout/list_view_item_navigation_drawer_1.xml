<?xml version="1.0" encoding="utf-8"?>
<se.anyro.nfc_reader.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/se.anyro.nfc_reader"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_background_empty" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <se.anyro.nfc_reader.font.FontelloTextView
            android:id="@+id/icon"
            style="@style/TextViewAppearance.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp"
            android:textColor="@drawable/selector_text_empty" />

        <se.anyro.nfc_reader.font.RobotoTextView
            android:id="@+id/title"
            style="@style/TextViewAppearance.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:textColor="@drawable/selector_text_empty"
            app:typeface="robotoBold" />
    </LinearLayout>

</se.anyro.nfc_reader.MaterialRippleLayout>